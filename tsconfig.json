{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",    
    "moduleResolution": "node16",   
    "lib": ["ES2018", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/cli.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components/**/*",
    "src/lib/**/*"
  ]
}