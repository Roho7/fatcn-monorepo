{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",    
      "moduleResolution": "bundler",
      "lib": ["ES2018", "DOM"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": ".",
      "baseUrl": ".",
      "paths": {
        "@fatcn/ui/*": ["components/*"]
      },
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "forceConsistentCasingInFileNames": true,
    },
    "include": [
      "./cli.ts"
    ],
    "exclude": [
      "node_modules",
      "fatcn-ui/dist",
      "packages/components/**/*",
      "packages/lib/**/*"
    ]
  }